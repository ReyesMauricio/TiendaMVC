@model MarketingR.Models.Categoria

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <!-- /.col -->
        <div class="col-md-12">
            <div class="card card-outline card-success">
                <div class="card-header">
                    <h3 class="card-title">Editar Categoria: @Model.Descripcion</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
 
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdCategoria)

                        <div class="col-lg-6 col-sm-12">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-6 col-sm-12">
                            @Html.LabelFor(model => model.FechaRegistro, htmlAttributes: new { @class = "control-label" })
                            <input type="text" name="FechaRegistro" id="FechaRegistro" value="@ViewBag.FechaRegistro" class="form-control" required />
                            @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <input type="submit" value="Editar" class="btn btn-success" />
                </div>
            </div>
            <!-- /.card -->
            <div>
                <button type="button" class="btn btn-primary" id="btnRegresar" name="btnRegresar" onclick="regresar()">
                    <i class="fas fa-arrow-alt-circle-left"></i> Regresar
                </button>
            </div>
        </div>
        <!-- /.col -->
    </div>
}
<script>
    function regresar() {
        document.getElementById("btnRegresar")
        location.href = "/Categorias/Index";
    }
</script>
