@model IEnumerable<MarketingR.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Listado de categorias</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 66px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary" id="crear" onclick="Crear()">
                                <i class="fas fa-plus"></i> Crear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdCategoria }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCategoria })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<script>
    function Crear() {
        document.getElementById("btnCrear")
        location.href = "/Categorias/Create";
    }
</script>

