@model MarketingR.Models.Categoria

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="card card-outline card-primary">
                <div class="card-header">
                    <h3 class="card-title">Crear categoria</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-6 col-sm-12 mb-3">
                            <label class="control-label">Fecha registro</label>
                            <input type="date" id="FechaRegistro" name="FechaRegistro" class="form-control">
                            @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
            <!-- /.card -->
            <div  class="mb-3">
                <button type="button" class="btn btn-primary" id="btnRegresar" name="btnRegresar" onclick="regresar()">
                    <i class="fas fa-arrow-alt-circle-left"></i> Regresar
                </button>
            </div>
        </div>
        <!-- /.col -->

    </div>
    
}

<script>
    function regresar() {
        document.getElementById("btnRegresar")
        location.href = "/Categorias/Index";
    }
</script>